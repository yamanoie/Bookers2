<div class="container">
	<div class="row">
<% if flash[:sucess_message] %>
      <div class="flash">
        <%= flash[:sucess_message] %>
      </div>
<% end %>

<% if flash[:notice] %>
	<div class="flash">
	<%= flash[:notice] %>
	</div>
<% end %>





	<h2>Books</h2>
<div class="col-xs-3">
<%= render 'users/list', user: @user, book: Book.new %>
</div>
<div class="col-xs-9">


<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= link_to user_path(@user) do %>
			<%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size:"50x50"%>
			<% end %></td>
			<td><%= link_to book.title, book_path(book) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
	
</div>


