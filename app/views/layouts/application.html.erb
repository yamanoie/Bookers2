<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/3fdfb4a373.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        
      
      <nav class="nav navbar-nav navbar-left">

        <span style="font-size: 20px;padding-top: 10px;color: white;">Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to 'Home', user_path(current_user.id),class:"glyphicon glyphicon-home home"%>
          </li>
          <li>
            <%= link_to "Users",  users_path,class:"glyphicon glyphicon-user users" %>
          </li>
          <li>
            <%= link_to 'Books', books_path, class:"glyphicon glyphicon-book books"%>
          </li>
          <li>
            <%= link_to 'logout', destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout" %>
          </li>
        <% else %>
          <li>
            <%= link_to " Home", root_path, class: "glyphicon glyphicon-home home" %>
          </li>
          <li> 
            <%= link_to " About", top_about_path, class: "glyphicon glyphicon-link about" %>
          </li>
          <li>
            <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
          </li>
          <li>
            <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
          </li>
        <% end %>
    </nav>
     </div>
  </ul>
  </div>

</header>


<div class="body" style="margin-top: 51px;">
  <% if user_signed_in? %>
    <div class="search-form">
      <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag :word %>
      <%= select_tag "range",options_for_select({"User" => "user", "Book" => "book"}) %>
      <%= select_tag "search",options_for_select({"完全一致" => "match","前方一致" => "forward","後方一致" => "backward" ,"部分一致" => "partical"}) %>
      <%= submit_tag "検索" %>
      <% end %>
    </div>
<% end %>
  <%= yield %>
</div>
  </body>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
