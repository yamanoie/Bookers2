<div class="container">
	<div class="row">


<% if @new_book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    	<%= @new_book.errors.count %>errors prohibited this obj from being saved
      <% @new_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<h2>Books</h2>
<div class="col-xs-3">
<%= render 'users/list', user: current_user, book: @new_book %>
</div>
<div class="col-xs-9">
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<%= render partial: "books/book", locals: {book: book} %>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
	
</div>