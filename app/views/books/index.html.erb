<% if @new_book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    	<%= @new_book.errors.count %>errors prohibited this obj from being saved
      <% @new_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Books</h2>

<%= render 'users/list', user: current_user, book: @new_book %>


<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
			<%= attachment_image_tag book.user, :profile_image, fallback:"no_image.jpg", size:"50x50"%>
			</td>
			<td><%= link_to book.title, book_path(book) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>