<div class="container">
	<div class="row">
<% if flash[:sucess_message] %>
      <div class="flash">
        <%= flash[:sucess_message] %>
      </div>
 <% end %>


 <% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
    	<%= @user.errors.count %>errors prohibited this obj from being saved
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


	


<div class="col-xs-3">
<%= render 'users/list', user: @book.user, book: @new_book %>
</div>

	


<div class="col-xs-9">
<h2>Book detail</h2>
<table class="table">
	<thead>
		<tr>
			<td>
				<div class="i">
					
				
				<%= link_to user_path(@user) do %>
			<div>
			<%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size:"50x50"%>
			</div>
			<%= @user.name %>
			<% end %>
			     </div>
			</td>
			<td><%= @book.title %></td>
			<td><%= @book.body %></td>
			<% if @book.favorited_by?(current_user) %>
				<td>
					<%= link_to book_favorites_path(@book), method: :delete do %>
					  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
					  <%= @book.favorites.count %>
					<% end %>
				</td>
				<% else %>
				<td>
					<%= link_to book_favorites_path(@book), method: :post do %>
					  <i class="fa fa-heart-o" aria-hidden="true"></i>
					  <%= @book.favorites.count %>
					<% end %>
				</td>
			<% end %>
			<td>コメント数:<%= @book.book_comments.count %></td>

			<% if @book.user == current_user%>
			<td><%= link_to "Edit", edit_book_path(@book),class:"btn-success" %></td>
			<td><%= link_to "Destroy", book_path(@book), method: :delete,data:{confirm:"本当に消しますか？"} ,class:"btn-sm btn-danger"%></td>
			<% end %>



		</tr>
	</thead>
	<tbody>
	</tbody>
</table>

<%= form_for [@book, @book_comment] do |f| %>
<%= f.text_area :comment, rows:'5', class: "form-control"%>
<%= f.submit "送信"%>
<% end %>



<ol>
<% @book.book_comments.each do |book_comment| %>
<li class="comment">
	<div class="comment-body bb">
		<div class="comment-text">
		<div class="comment-author clearfix">
			<%= book_comment.user.name %>
			<span class="comment-meta">
				<span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
			</span>
		</div>
		<div class="comment-entry">
			<%= book_comment.comment %>
		</div>
		<% if book_comment.user == current_user %>
			<div>
				<%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-dabger pull-right "%>
			</div>
		<% end %>
		</div>
	</div>
</li>


<% end %>
</ol>
</div>
</div>



